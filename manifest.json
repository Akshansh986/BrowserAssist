{
  "manifest_version": 3,
  "name": "ChatGPT Sidebar",
  "version": "1.0",
  "description": "Access ChatGPT from a sidebar in your browser",
  "permissions": ["sidePanel", "storage", "tabs", "scripting", "activeTab"],
  "host_permissions": [
    "http://localhost:8000/",
    "<all_urls>"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "action": {
    "default_title": "Open ChatGPT Sidebar",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 