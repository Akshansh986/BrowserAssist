{
  "manifest_version": 3,
  "name": "Browser Assist",
  "version": "1.0",
  "description": "Access Browser Assist from a sidebar in your browser",
  "permissions": ["sidePanel", "storage", "tabs", "scripting", "activeTab"],
  "host_permissions": [
    "https://api.openai.com/",
    "<all_urls>"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "action": {
    "default_title": "Open Browser Assist",
    "default_icon": {
      "16": "icons/icon-1.png",
      "24": "icons/icon-2.png",
      "32": "icons/icon-3.png",
      "48": "icons/icon-4.png",
      "64": "icons/icon-5.png",
      "96": "icons/icon-6.png",
      "128": "icons/icon-7.png",
      "256": "icons/icon-8.png",
      "512": "icons/icon-9.png"
    }
  },
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["turndown.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icons/icon-1.png",
    "24": "icons/icon-2.png",
    "32": "icons/icon-3.png",
    "48": "icons/icon-4.png",
    "64": "icons/icon-5.png",
    "96": "icons/icon-6.png",
    "128": "icons/icon-7.png",
    "256": "icons/icon-8.png",
    "512": "icons/icon-9.png"
  }
} 